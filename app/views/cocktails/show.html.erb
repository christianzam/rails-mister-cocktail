<h1>Your cocktail: <%= @cocktail.name %> </h1>
<br>
<br>
<div>
<h3>Recipe</h3>
  <table class="table table-bordered">
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Delete Recepie</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create new dose", new_cocktail_dose_path(@cocktail)%>
<br>
<br>
<%= link_to cocktails_path do %>
  <h5> Back to Home Page </h5>
<% end %>
